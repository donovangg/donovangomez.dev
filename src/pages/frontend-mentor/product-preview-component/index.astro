---
import Layout from "../../../layouts/Layout.astro";
import "./styles.css";
---

<Layout>
  <main>
    <div class="container">
      <div class="card">
        <div class="card-image-container">
          <img
            class="card-image__mobile"
            src="/assets/frontend-mentor/product-preview-component/image-product-mobile.jpg"
          />
          <img
            class="card-image__desktop"
            src="/assets/frontend-mentor/product-preview-component/image-product-desktop.jpg"
          />
        </div>
        <div class="card-content">
          <div class="card-content__wrapper">
            <h3 class="card-content__category">Perfume</h3>
            <h2 class="card-content__title">Gabrielle Essence Eau De Parfum</h2>
            <p class="card-content__description">
              A floral, solar and voluptuous interpretation composed by Olivier
              Polge, Perfumer-Creator for the House of CHANEL.
            </p>
            <div class="price-container">
              <p class="price__green">$149.99</p>
              <span class="price__old">$169.99</span>
            </div>
            <button class="card-button">
              <img
                class="cart-image"
                src="/assets/frontend-mentor/product-preview-component/icon-cart.svg"
              />
              <span>Add to Cart</span>
            </button>
          </div>
        </div>
      </div>
    </div>

    <div class="attribution">
      Challenge by
      <a href="https://www.frontendmentor.io?ref=challenge" target="_blank"
        >Frontend Mentor</a
      >. Coded by <a href="https://github.com/donovangomez">Donovan</a>.
    </div>
  </main>
</Layout>
