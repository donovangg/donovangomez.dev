---
import Layout from "./Layout.astro";
const { frontmatter } = Astro.props;
console.log(frontmatter);

const { title, stack, link, github } = frontmatter;
---

<Layout>
  <section
    class="bg-zinc-900 w-full mx-auto min-h-screen relative z-10 text-stone-100"
  >
    <div class="w-4/5 mx-auto pt-14">
      <div class="grid gap-4 items-center justify-items-start">
        <h1 class="text-5xl">{title}</h1>
        <h3 class="text-2xl">{stack}</h3>
        <a
          href={link}
          rel="noreferrer"
          target="_blank"
          class="bg-purple-600 text-white hover:bg-purple-800 focus:ring-purple-600 focus:ring-opacity-50 active:bg-purple-600 inline-block px-5 py-3 rounded-md focus:outline-none focus:ring focus:ring-offset-2 uppercase tracking-wider font-semibold text-sm sm:text-base;"
        >
          Live
        </a>
      </div>
      <div>
        <slot />
      </div>
    </div>
  </section>
</Layout>
