---
import Layout from "./Layout.astro";
const { frontmatter } = Astro.props;
console.log(frontmatter);

const { title, stack, link, github } = frontmatter;
---

<Layout>
  <section
    class="bg-zinc-900 w-full mx-auto min-h-screen relative z-10 text-stone-100"
  >
    <div class="w-4/5 mx-auto pt-14">
      <div class="grid gap-4 items-center justify-items-start">
        <h1 class="text-5xl">{title}</h1>
        <div class="flex gap-2">
          {stack.map((s) => (
            <img width={40} src={s.logo} alt={s.name} />
          ))}
        </div>
        <div class="flex gap-2">
        <a
          href={link}
          rel="noreferrer"
          target="_blank"
          class="bg-purple-600 text-white hover:bg-purple-800 focus:ring-purple-600 focus:ring-opacity-50 active:bg-purple-600 inline-block px-5 py-3 rounded-md focus:outline-none focus:ring focus:ring-offset-2 uppercase tracking-wider font-semibold text-sm sm:text-base;"
        >
          Live
        </a>
        <a
          href={github}
          rel="noreferrer"
          target="_blank"
          class="bg-purple-600 text-white hover:bg-purple-800 focus:ring-purple-600 focus:ring-opacity-50 active:bg-purple-600 inline-block px-5 py-3 rounded-md focus:outline-none focus:ring focus:ring-offset-2 uppercase tracking-wider font-semibold text-sm sm:text-base;"
        >
        <svg
        xmlns="http://www.w3.org/2000/svg"
        width="24"
        height="24"
        fill="currentColor"
        class="bi bi-github"
        viewBox="0 0 16 16"
      >
        <path
          d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"
        ></path>
      </svg>
        </a>
        </div>
      </div>
      <div>
        <slot />
      </div>
    </div>
  </section>
</Layout>
